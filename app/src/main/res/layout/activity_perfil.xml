<?xml version="1.0" encoding="utf-8"?>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".activities.PerfilActivity">

        <!-- Conteúdo rolável -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomNavigationView"
            android:padding="24dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- TÍTULO -->

                <!-- FOTO DE PERFIL -->
                <TextView
                    android:id="@+id/txtTituloPerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Perfil"
                    android:textAppearance="@style/titulo" />

                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/imgPerfil"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_user_placeholder"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_background"
                        android:contentDescription="Foto do usuário" />

                    <!-- Botão editar foto -->
                    <ImageButton
                        android:id="@+id/btEditarFoto"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/circle_yellow"
                        android:src="@drawable/ic_edit"
                        android:contentDescription="Editar foto"
                        android:elevation="4dp"
                        app:tint="@color/black" />
                </FrameLayout>

                <!-- NOME DO USUÁRIO -->
                <TextView
                    android:id="@+id/txtNomeUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="José Elias"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Campo de Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/AZUL_MEDIO"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edEmail"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/edittext_background"
                        android:enabled="false"
                        android:hint="jose.santo@exemplo.com"
                        android:paddingHorizontal="12dp"
                        android:text="email"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- Tipo de conta -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo de conta"
                        android:textColor="@color/AZUL_MEDIO"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edTipoConta"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/edittext_background"
                        android:enabled="false"
                        android:hint="Moderador"
                        android:paddingHorizontal="12dp"
                        android:text="tipo"
                        android:textColor="#000000" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="16dp" />

                <!-- Botões principais -->
                <Button
                    android:id="@+id/btnCadastrarEvento"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:text="Cadastrar evento"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/CINZA_GRAFITE"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnAlterarSenha"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:text="Alterar senha"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/CINZA_GRAFITE"
                    android:layout_marginBottom="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="16dp" />

                <!-- Botão sair -->
                <Button
                    android:id="@+id/btnSair"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/VERMELHO_ESCURO"
                    android:onClick="sairConta"
                    android:text="Sair da conta"
                    android:textColor="@color/CINZA_CLARO" />

            </LinearLayout>
        </ScrollView>

        <!-- MENU INFERIOR FIXO -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:background="@color/DOURADO_QUENTE"
            app:menu="@menu/menu_inferior"
            app:itemIconTint="@color/black"
            app:itemTextColor="@color/black" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>